<% layout('/layouts/boilerplate') %>

    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold">All Schools</h1>
            <a href="/schools/new" class="btn btn-primary">+ Add School</a>
        </div>

        <div class="row g-4">
            <% for(let school of schools) { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">

                        <!-- Image -->
                        <div class="ratio ratio-4x3">
                            <img src="<%= school.image %>" class="card-img-top object-fit-cover"
                                alt="<%= school.title %>">
                        </div>

                        <!-- Body -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-semibold">
                                <%= school.title %>
                            </h5>

                            <p class="card-text text-muted small flex-grow-1">
                                <%= school.description.substring(0, 100) %>...
                            </p>

                            <p class="text-muted small mb-3">
                                <span style="color:#FF6B6B;">
                                    üìç <%= school.location %>
                                </span>
                            </p>

                            <a href="/schools/<%= school._id %>" class="btn btn-primary mt-auto">
                                View School
                            </a>
                        </div>

                    </div>
                </div>
                <% } %>
        </div>
    </div>